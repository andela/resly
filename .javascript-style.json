// the following is based on
// https://raw.githubusercontent.com/thoughtbot/hound/master/config/style_guides/javascript.json

{
  "asi": false,
  "bitwise": true,
  "browser": true,
  "camelcase": true,
  "curly": true,
  "forin": true,
  "immed": true,
  "latedef": "nofunc",
  "maxlen": 80,
  "newcap": true,
  "noarg": true,
  "noempty": true,
  "nonew": true,
  "predef": [
    "$",
    "jQuery",

    "jasmine",
    "beforeEach",
    "describe",
    "expect",
    "it",

    "angular",
    "inject",
    "module"
  ],
  "quotmark": true,
  "trailing": true,
  "undef": true,
  "unused": true
}